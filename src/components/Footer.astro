import { UNDER_CONSTRUCTION, IMPRESSUM, DOWNLOADS } from "src/data/links";

const footerLinks = [
  {
    link: UNDER_CONSTRUCTION,
    title: "Startseite",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Aktuelles",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Heimatgruppe",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Jugendgruppe",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Wanderungen",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Wanderwegefinder",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Alle Wanderwege",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Der Harz",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Über uns",
  },
  {
    link: UNDER_CONSTRUCTION,
    title: "Mitglied werden",

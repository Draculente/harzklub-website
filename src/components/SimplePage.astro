---
import type { Seite } from "@lib/links";
import Header from "@components/header/Header.astro";
import PageWrapper from "./PageWrapper.astro";
import SimplePageHeader from "./SimplePageHeader.astro";

export type Props = {
  page?: Seite;
  title: string;
  subtitle: string;
  text?: string;
};

const { page, title, subtitle, text } = Astro.props;
---

<PageWrapper page={page}>
  <SimplePageHeader subtitle={subtitle} title={title} text={text} />
  <slot />
</PageWrapper>

---
export interface Props {
  title: string;
  link: string;
}

const { title, link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="flex flex-row bg-info rounded-lg w-max drop-shadow-md justify-between items-center hover:scale-105 transition-all"
>
  <i
    class="ri-download-line border-r-2 border-neutral py-2 px-3 text-info-content text-2xl aspect-square"
  ></i>
  <div class="h-full flex px-4 justify-center items-center">
    {title}
  </div>
</a>

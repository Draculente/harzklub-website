---
export type Props = {
    html: string;
};

const { html } = Astro.props;
---

<article set:html={html} class="article-body"></article>

<style is:global lang="stylus">
    article.article-body 
        img 
            max-width: 100%
            border-radius: 10px
        blockquote
            // font: 14px/22px normal helvetica, sans-serif;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-left: 50px;
            padding-left: 15px;
            border-left: 3px solid #ccc;
        p
            margin-top: 10px;
            margin-bottom: 10px;

        ul, li 
            margin-left: 10px;

        li::before
            content: "-";
            margin-right: 7px;
            display: inline flow-root list-item;

        a
            text-decoration: underline;
            &:hover
                text-decoration: none;
</style>